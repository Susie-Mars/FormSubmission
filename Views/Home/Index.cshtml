@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center flex-column align-items-center">
    <div class="d-flex justify-content-center m-3 border-bottom border-dark">
        <h1>Please tell us more about you</h1>
    </div>
    <div class="shadow p-3 mb-5 mt-3 rounded formDiv w-25">
        @model User
        <form action="process" method="post" class="form">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" id="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Birthday"></label>
                <input asp-for="Birthday" type="date" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OddNum">Favorite Odd Number</label>
                <input asp-for="OddNum"  class="form-control" />
                <span asp-validation-for="OddNum" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-end">
                <input type="submit" class="btn btn-warning mt-3 btn-sm text-dark" />
            </div>

        </form>
    </div>
</div>